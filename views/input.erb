<h3><%= @description %></h3>

<form action="/output">
  <div class="form-group">
    <label for="length">Length (inches):</label>
    <input id="l" name="length" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="width">Width (inches): </label>
    <input id="w" name="length" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="height">Height (inches): </label>
    <input id="h" name="height" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="weight">Weight (pounds): </label>
    <input id="lbs" name="weight" class="form-control" type="text">
  </div>
  <button type="submit" class="btn bg-info">Go!</button>
</form>
